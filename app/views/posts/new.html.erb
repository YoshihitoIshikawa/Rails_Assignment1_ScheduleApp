<div class = "container">
  
  <p>新規予定の作成</p>
  
  <%= render "shared/error", obj: @post %>
  
  <%= form_with model: @post do |f| %>
  
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>
    <tr>
      <th><%= f.label :end_date, "終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>
    <tr>
      <th><%= f.label :is_all_day, "終日の場合はチェック" %></th>
      <td><%= f.check_box :is_all_day %></td>
    </tr>
    <tr>
      <th><%= f.label :content, "スケジュールメモ" %></th>
      <td><%= f.text_area :content %></td>
    </tr>
  </table>
  
  <div>
    <ul>
      <li>
        <%= link_to :posts do %>
        <button>キャンセル</button>
        <% end %>
      </li>
      <li><%= f.submit "作成" %></li>
    </ul>
  </div>
  
  <% end %>
</div>
